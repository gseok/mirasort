{
    // required
    "name": "Text Alphabet Sort",
    "version": "0.1",
    "manifest_version": 2,

    "author": "gseok.seo@gmail.com",
    "description": "Text alphabet sort for each line",
    "browser_action": {
        "default_title": "Mira text alphabet sort",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "http://ajax.googleapis.com/"
    ],
    "content_security_policy": "script-src 'self' https://*.googleapis.com; object-src 'self'"
}